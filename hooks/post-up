#!/bin/sh

show_done_message() {
  echo "âœ“ Done"
  echo
}

echo "Installing python plugin support for neovim..."
pip install --upgrade neovim
show_done_message

echo "Symlinking neovim config from vim"
ln -sf ~/.vim ~/.config/nvim
ln -sf ~/.vimrc ~/.config/nvim/init.vim
show_done_message

echo "Installing vim plugins"
nvim +PlugInstall +qa
show_done_message
